{% extends 'base.html.twig' %}

{% block title %}Hello categoryController!{% endblock %}

{% block body %}
<div class="container">
   <h2 class="text-dark text-center">CATEGORY LIST</h2>
    {% if is_granted('ROLE_ADMIN') %}
   <a class="btn btn-outline-dark" href="{{ path('category_add') }}">ADD Category</a>
    {% endif %}
   <table class="table text-center">
      <thead class="thead-dark">
         <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            
            <th scope="col">Actions</th>
         </tr>
      </thead>
      <tbody>
      {% for category in categories %}
          <tr>
           
           <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
           
            <td>
            {% if is_granted('ROLE_ADMIN') %}

               <a class="btn btn-success" href="{{ path('category_detail', {'id' : category.id }) }}">DETAIL</a>
               <a class="btn btn-info" href="{{ path('category_edit', {'id': category.id }) }}">EDIT</a>
               <a class="btn btn-danger" href="{{ path('category_delete', {'id': category.id }) }}"
               onclick="return confirm('Are you sure to delete this category ?')">
               DELETE</a>
            {% else %}
               <a class="btn btn-success" href="{{ path('category_detail', {'id' : category.id }) }}">DETAIL</a>
            {% endif %}
            </td>
         </tr>
      {% endfor %}     
      </tbody>
   </table>
</div>
{% endblock %}
