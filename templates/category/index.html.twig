{% extends 'base.html.twig' %}

{% block title %}Hello categoryController!{% endblock %}

{% block body %}
<div class="container">
   <h4 class="text-primary text-center">Category List</h4>
   <a class="btn btn-outline-primary" href="{{ path('category_add') }}">ADD Category</a>
   <table class="table table-striped text-center">
      <thead>
         <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
         </tr>
      </thead>
      <tbody>
      {% for category in categories %}
          <tr>
           
           <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td>
            {% if is_granted('ROLE_ADMIN') %}

               <a class="btn btn-info" href="{{ path('category_detail', {'id' : category.id }) }}">DETAIL</a>
               <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id }) }}">EDIT</a>
               <a class="btn btn-warning" href="{{ path('category_delete', {'id': category.id }) }}"
               onclick="return confirm('Are you sure to delete this category ?')">
               DELETE</a>
            {% else %}
               <a class="btn btn-info" href="{{ path('category_detail', {'id' : category.id }) }}">DETAIL</a>
            {% endif %}
            </td>
         </tr>
      {% endfor %}     
      </tbody>
   </table>
</div>
{% endblock %}
