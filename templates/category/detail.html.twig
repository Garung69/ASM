{% extends 'base.html.twig' %}

{% block title %}Hello categoryController!{% endblock %}

{% block body %}
<div class="container">
   <h4 class="text-primary text-center">category List</h4>
   <a class="btn btn-outline-primary" href="{{ path('category_add') }}">ADD category</a>
   <table class="table table-striped text-center">
      <thead>
         <tr>           
            <th>Name</th>
            <th>Description</th>
            <th>Subjects</th>           
            {% if is_granted('ROLE_ADMIN') %}
            <th>Actions</th>
            {% else %}
            {% endif %}
         </tr>
      </thead>
      <tbody>
    
          <tr>            
            <td>{{ category.name }}</td>
            <td>{{category.description}}</td>
            <td></td>
            <td>
            {% if is_granted('ROLE_ADMIN') %}
               <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id }) }}">EDIT</a>
               <a class="btn btn-warning" href="{{ path('category_delete', {'id': category.id }) }}"
               onclick="return confirm('Are you sure to delete this Category ?')">
               DELETE</a>
            {% else %}
            {% endif %}
            </td>
         </tr>
       
      </tbody>
   </table>
</div>
{% endblock %}
