{% extends 'base.html.twig' %}

{% block title %}Hello categoryController!{% endblock %}

{% block body %}
<div class="container">
   <h2 class="text-dark text-center">CATEGORY DETAIL</h2>
   <a class="btn btn-outline-dark" href="{{ path('category_add') }}">ADD category</a>
   <table class="table text-center">
      <thead class="thead-dark">
         <tr>           
            <th>Name</th>
            <th>Description</th>
            <th>Subjects</th>                     
            <th>Actions</th>
         </tr>
      </thead>
      <tbody> 
          <tr>            
            <td>{{ category.name }}</td>
            <td>{{category.description}}</td>
            <td>
						{% for a in category.subjects %}
							<a href="{{ path('subject_detail', {'id': a.id }) }}">
								{{ a.name }}
							</a>
							<br>
						{% endfor %}
					</td> 
            <td>
            {% if is_granted('ROLE_ADMIN') %}
               <a class="btn btn-info" href="{{ path('category_edit', {'id': category.id }) }}">EDIT</a>
               <a class="btn btn-danger" href="{{ path('category_delete', {'id': category.id }) }}"
               onclick="return confirm('Are you sure to delete this Category ?')">
               DELETE</a>
            {% else %}
            {% endif %}
            </td>
         </tr>
       
      </tbody>
   </table>
</div>
{% endblock %}
